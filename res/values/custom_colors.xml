<resources>
    <!-- Scene and filter settings -->
    <color name="scene_item_selected">@color/material_accent_icon</color>
    <color name="list_divider_color">@color/material_accent_icon_disabled</color>
    <color name="popup_title_color">@color/material_accent_icon</color>

    <!-- Settings/Menu  -->
    <color name="popup_background">@color/material_bg_opaque_settings</color> <!-- Settings background -->
    <color name="camera_switcher_background">@color/material_bg_opaque_settings</color> <!-- camera switcher background -->
    <color name="setting_color">@color/material_dark</color> <!-- 1st level selected item -->
    <color name="setting_color_light">@color/material_primary</color> <!-- 2nd level selected item -->

    <!-- Top and bottom camera controls. opaque is for 4:3 and transparent is for 16:9 previews -->
    <color name="camera_control_bg_opaque">@color/material_bg</color>
    <color name="camera_control_bg_transparent">@color/material_bg_opaque</color>

    <!-- Change colours here -->
    <color name="black">#212121</color>
    <color name="red">#ff0000</color>
    <color name="material_accent_icon">#ffffffff</color> <!-- all icons + scene mode selected -->
    <color name="material_accent_icon_disabled">#74ffffff</color> <!-- disabled icon -->
    <color name="material_dark">#ff00796b</color>
    <color name="material_primary">#ff009688</color>
    <color name="material_light">#ffb2dfdb</color> <!-- not used, but part of pallete just in case-->
    <color name="material_bg">#ff000000</color>
    <color name="material_bg_opaque">#24000000</color>
    <color name="material_bg_opaque_settings">#60000000</color>
    <color name="material_text">#4CAF50</color> <!-- text color in settings/menu -->
    <color name="transparent">@android:color/transparent</color>

    <color name="ic_launcher_background">#68be6c</color>
</resources>
